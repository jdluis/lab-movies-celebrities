<div>
  <h2>Edit Movie</h2>

  <form action="/movies/{{movie._id}}/edit" method="post">
    <label for="title">Title</label>
    <input name="title" value="{{movie.title}}" type="text" />
    <label for="genre">Genre</label>
    <input name="genre" value="{{movie.genre}}" type="text" />
    <label for="plot">Plot</label>
    <input name="plot" value="{{movie.plot}}" type="text" />
    <label for="cast">Cast</label>
    <select name="cast" multiple>
      {{#each celebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>

    <select disabled multiple name="cast">
      {{#each movie.cast}}
        <option selected value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
    <button>Update</button>
  </form>
</div>