<div class="container mt-5">
  <h2 class="text-center">Edit Movie</h2>

  <form class="mt-3" action="/movies/{{movie._id}}/edit" method="post">
    <label class="form-label mt-3" for="title">Title</label>
    <input class="form-control" name="title" value="{{movie.title}}" type="text" />
    <label class="form-label mt-3" for="genre">Genre</label>
    <input class="form-control" name="genre" value="{{movie.genre}}" type="text" />
    <label class="form-label mt-3" for="plot">Plot</label>
    <input class="form-control" name="plot" value="{{movie.plot}}" type="text" />
    <label class="form-label mt-3" for="cast">Cast</label>

