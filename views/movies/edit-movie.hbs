      {{/each}}
    </select> --}}
    
    <select class="form-select" name="cast" multiple>
      {{#each celebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
     <label class="mt-3 form-label" for="cast">Cast Selected Before</label>
    <select class="form-select"  disabled multiple name="cast">
      {{#each movie.cast}}
